{
  "name": "dvd-shop-calculator",
  "version": "1.0.0",
  "description": "Application de calcul de prix pour une boutique de DVDs avec systÃ¨me de promotions intelligent pour la saga Back to the Future",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "start:server": "node dist/server.js",
    "start:server:dev": "ts-node src/server.ts",
    "build": "tsc && shx cp -r src/public dist/",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "docker:build": "docker build -t dvd-shop-calculator -f docker/Dockerfile .",
    "docker:run": "docker run -p 3000:3000 dvd-shop-calculator",
    "clean": "rimraf dist coverage"
  },
  "keywords": [
    "dvd",
    "shop",
    "calculator",
    "typescript",
    "back-to-the-future"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "shx": "^0.4.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "winston": "^3.11.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
