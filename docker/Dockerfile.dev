# Development Dockerfile with hot reload support
# Pin to specific digest for security - update periodically with:
# docker pull node:20-alpine && docker inspect --format='{{index .RepoDigests 0}}' node:20-alpine
FROM node:20-alpine@sha256:bf77dc26e48ea95fca9d1aceb5acfa69d2e546b765ec2abfb502975f1a7d093f

WORKDIR /app

# Install dependencies for better DX
RUN apk add --no-cache git

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm install

# Copy configuration files
COPY tsconfig.json ./
COPY jest.config.js ./
COPY .eslintrc.json ./
COPY .prettierrc ./

# Source files will be mounted as volume for hot reload

# Expose port
EXPOSE 3000

# Set environment variables
ENV NODE_ENV=development
ENV LOG_LEVEL=debug

# Start in development mode with ts-node
CMD ["npm", "run", "start:dev"]
